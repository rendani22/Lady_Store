<div class="row">
    <div class="col-sm-6 col-md-4 col md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessage}}d-none{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>


{{#each products}}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="card" >
                    {{#if this.imagePath.length}}
                        <div class="your-class">
                            {{#each this.imagePath}}
                                <div class="text-center img-responsive mx-auto d-block">
                                    <img src={{this}} class="rounded" alt="...">
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}

                    <div class="card-body">
                        <h3>{{this.title}}</h3>
                        <p class="card-text">{{this.description}}!</p>
                        <div class="clearfix" >
                            <div class="price pull-left">R{{this.price}}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
{{/each}}


<script>


    $(document).ready(function(){
        $('.your-class').slick({
            dots: true,
            infinite: true,
            speed: 500,
            cssEase: 'linear'
        });
    });
</script>