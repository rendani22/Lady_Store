{{#if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                    <li class ="list-group-item">
               <span class="badge">
                   {{this.qty}}
               </span>
                        <strong>
                            {{this.item.title}}
                        </strong>
                        <span class="label label-success">R{{this.price}}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by one</a></li>
                                <li><a href="#">Remove all</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total Price:R{{totalPrice}}</strong>
        </div>
        <hr>
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total Items:{{session.cart.totalQty}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a  href="/checkout" type="button" class="btn btn-success">Check Out</a>
        </div>

    </div>

{{else}}
{{/if}}


<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Cart</h2>
    </div>
</div>